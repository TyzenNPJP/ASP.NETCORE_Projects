@model Student_Management_System.View_Model.StudentRegistrationViewModel

@{
    ViewData["Title"] = "Create";
}

<head>
    <meta lang="en" />
    <meta charset="utf-8" />
    <title>Registration</title>
    <link rel="stylesheet" href="/css/Styles.css" />
</head>

<section class="text-center">
    <h4>Student Registration</h4>
    <hr />
</section>

<div class="div-form">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group, div-form-elements">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group, div-form-elements">
            <label asp-for="Address" class="control-label"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group, div-form-elements">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group, div-form-elements">
            <label asp-for="Phone" class="control-label"></label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="form-group, div-form-elements">
            <label class="control-label">Group</label>
            <div class="editor-field">
                @Html.DropDownListFor(x => x.GroupId, Model.GroupData, "Select Group", new { @class = "form-control col-md-6"})
            </div>
            <span asp-validation-for="GroupId" class="text-danger"></span>
        </div>
        <div class="form-group, div-form-elements">
            <label class="control-label">Level</label>
            <div class="editor-field">
                @Html.DropDownListFor(x => x.LevelId, Model.LevelData, "Select Level", new { @class = "form-control col-md-6"})
            </div>
            <span asp-validation-for="LevelId" class="text-danger"></span>
        </div>
        <div class="form-group, div-form-elements">
            <label class="control-label">Course</label>
            <div class="editor-field">
                @Html.DropDownListFor(x => x.CourseId, Model.CourseData, "Select Course", new { @class = "form-control col-md-6"})
            </div>
            <span asp-validation-for="CourseId" class="text-danger"></span>
        </div>
        
        <div class="form-group, div-btn">
            <input type="submit" value="Create" class="btn btn-submit" />
        </div>
    </form>
</div>
<div class="div-center1">
    <a asp-action="Index class="text-center1">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
